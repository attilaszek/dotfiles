#########################################
# Aliases and alias functions

# --------------- Navigation ---------------
alias l="ls -l"
alias c="cd"
alias ..="cd .."
alias ll="ls -la"
alias gp="git push $*"

# --------------- Git ---------------
alias gs="git status"
function gc(){
  git commit -a -m "$*"
}

if [ -f ~/.local_aliases ]; then
  . ~/.local_aliases
fi
